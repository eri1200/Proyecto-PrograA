@model IEnumerable<ProyectoMvc.Models.Encargado>

@{ ViewData["Title"] = "Listado de encargados"; }

<h1 class="text-center"><i class="fas fa-comments-dollar text-success"></i> Listado de Encargados</h1>

<table class="table" id="tblEncargados">
    <thead class="thead-light">
        <tr>
            <th>Nombre del encargado</th>
            <th>
                <a onclick="ShowPopup('@Url.Action("EncargadooUpsert", "Encargado", null, Context.Request.Scheme)','Nuevo')" class="btn btn-success text-white"><i class="fas fa-random"></i> Nuevo</a>
            </th>
        </tr>
    </thead>
</table>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="~/js/Encargado.js"></script>
}